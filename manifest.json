{
  "version": "2.0",
  "manifest_version": 3,
  "name": "One Click Search",
  "description": "Search multiple sites with a single click.",
  "permissions": ["storage"],
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "default_title": "One Click Search",
    "default_popup": "layouts/options.html"
  },
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "exclude_matches": ["*://meet.google.com/*"],
      "js": [
        "scripts/jquery/jquery-3.4.1.js",
        "scripts/defaults.js",
        "scripts/content.js"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "stylesheets/popup.css",
        "images/copy.ico",
        "images/goto.ico",
        "scripts/jquery/jquery-3.4.1.js"
      ],
      "matches": ["https://*/*", "http://*/*"]
    }
  ]
}
