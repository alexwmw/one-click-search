{
  "padding": {
    "class": "appearance",
    "id": "padding",
    "label": "Padding",
    "description": "Space around the popup icons",
    "value": "2",
    "type": "slider",
    "unit": "px",
    "min": 1,
    "max": 4,
    "step": 1
  },
  "borderRadius": {
    "class": "appearance",
    "id": "borderRadius",
    "label": "Border radius",
    "description": "Curvature of the poup's edges",
    "value": "6",
    "type": "slider",
    "unit": "px",
    "min": 5,
    "max": 15,
    "step": 1
  },
  "fadeOutTime": {
    "class": "behaviour",
    "id": "fadeOutTime",
    "label": "Fade-out duration",
    "description": "Number of seconds to fade-out the pop-up",
    "value": "5",
    "type": "slider",
    "unit": "s",
    "min": 1,
    "max": 10,
    "step": 0.5
  },
  "fadeDelay": {
    "class": "behaviour",
    "id": "fadeDelay",
    "label": "Fade-out delay",
    "description": "Number of seconds of inactivity before fade-out begins",
    "value": "5",
    "type": "slider",
    "unit": "s",
    "min": 1,
    "max": 10,
    "step": 0.5
  },
  "showDelay": {
    "class": "behaviour",
    "id": "showDelay",
    "label": "Hover delay",
    "description": "Number of seconds to hover before showing hidden icons",
    "value": "1",
    "type": "slider",
    "unit": "s",
    "min": 1,
    "max": 5,
    "step": 0.5
  },
  "linkTarget": {
    "class": "behaviour",
    "id": "linkTarget",
    "label": "Open search in...",
    "description": "Open search in a new tab or the current tab",
    "value": "New tab",
    "type": "select",
    "options": ["New tab", "Current tab"],
    "dictionary": { "New tab": "_blank", "Current tab": "_self" }
  },
  "maxChars": {
    "class": "behaviour",
    "id": "maxChars",
    "label": "Max. characters",
    "description": "Maximum number of characters that will trigger the popup when selected. Set to 0 for unlimited.",
    "value": "1000",
    "type": "number"
  },
  "colour": {
    "class": "appearance",
    "id": "colour",
    "label": "Popup colour",
    "description": "Select from light or dark mode or choose custom.",
    "value": "Light",
    "type": "select",
    "options": ["Light", "Dark", "Custom"],
    "customValues": { "backgroundColor": "#ffffff", "borderColor": "#000000" }
  },
  "shadow": {
    "class": "appearance",
    "id": "shadow",
    "label": "Popup shadow",
    "description": "Add a subtle shadow behind the popup.",
    "value": true,
    "type": "switch"
  },
  "animations": {
    "class": "behaviour",
    "id": "animations",
    "label": "Enable animations",
    "description": "Enable animations in the popup",
    "value": true,
    "type": "switch"
  },
  "enableCopy": {
    "class": "function",
    "id": "enableCopy",
    "label": "Enable copy function:",
    "description": "Enable copy function",
    "value": true,
    "type": "switch"
  },
  "enableGoto": {
    "class": "function",
    "id": "enableGoto",
    "label": "Enable GoTo function:",
    "description": "Enable GoTo function",
    "value": true,
    "type": "switch"
  }
}
